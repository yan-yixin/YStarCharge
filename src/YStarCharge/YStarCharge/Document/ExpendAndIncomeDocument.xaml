<UserControl x:Class="YStarCharge.Document.ExpendAndIncomeDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YStarCharge.Document" 
             xmlns:customcontrol="clr-namespace:YStarCharge.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="1080">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#253a5b" Offset="0.1"/>
                <GradientStop Color="#011a34" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="105"/>
        </Grid.RowDefinitions>
        <Grid x:Name="contentGrid" Grid.Row="0"/>

        <TextBlock Grid.Row="1" Text="Copyright ©  2022 yanyixin" Foreground="White" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
